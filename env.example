# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# AWS Resource Names
S3_BUCKET_NAME=rag-agent-vectors
S3_VECTOR_INDEX_NAME=rag-vectors
DYNAMODB_TABLE_NAME=rag-agent-metadata
BEDROCK_KNOWLEDGE_BASE_ID=your-knowledge-base-id
BEDROCK_AGENT_ID=your-agent-id

# Bedrock Model Configuration
BEDROCK_EMBEDDING_MODEL_ID=amazon.titan-embed-text-v2:0
BEDROCK_LLM_MODEL_ID=qwen.qwen3-32b-v1:0
BEDROCK_AGENT_MODEL_ID=qwen.qwen3-32b-v1:0

# Google AI Configuration (Optional - for hybrid agent)
GOOGLE_API_KEY=your-google-api-key
GOOGLE_MODEL_NAME=gemini-1.5-pro

# Application Settings
APP_ENV=development
APP_DEBUG=true
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# Vector Search Configuration
VECTOR_DIMENSION=1024
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# Chunking Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

